<resources xmlns:tools="http://schemas.android.com/tools" xmlns:ns1="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.Media" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowSwipeToDismiss" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorAccent">@color/main</item>
    </style>
    <style name="Theme.Media.Gone" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowSwipeToDismiss" tools:ignore="NewApi">false</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorAccent">@color/main</item>
    </style>
</resources>